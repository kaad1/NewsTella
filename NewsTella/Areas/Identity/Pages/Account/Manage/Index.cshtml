@page
@model NewsTella.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="container">
    <div class="row">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post" asp-action="SaveProfileChanges" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div id="user-profile-container">
                @await Html.PartialAsync("_UserProfile", Model.UserProfile)
            </div>
            <div id="edit-user-profile-container" style="display:none;">
                @await Html.PartialAsync("_EditUserProfile", Model.UserProfile)
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function showEditProfile() {
            document.getElementById('user-profile-container').style.display = 'none';
            document.getElementById('edit-user-profile-container').style.display = 'block';
        }

        function showUserProfile() {
            document.getElementById('user-profile-container').style.display = 'block';
            document.getElementById('edit-user-profile-container').style.display = 'none';
        }

        function saveThenShowUserProfile(event) {
            event.preventDefault(); 
            var form = document.getElementById('profile-form');
            var formData = new FormData(form);

            
            fetch(form.action, {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        
                        showUserProfile();
                    } else {
                        
                        return response.text().then(text => {
                            console.error('Form submission error:', text);
                            document.getElementById('edit-user-profile-container').innerHTML = text;
                        });
                    }
                })
                .catch(error => {
                    console.error('Form submission error:', error);
                });
        }
    </script>
}


