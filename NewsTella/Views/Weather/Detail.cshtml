@model NewsTella.Models.ViewModel.WeatherVM

@{
    ViewData["Title"] = "Weather Forecast";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card mt-4">
                    <div class="card-header text-white bg-dark">
                        <h3><i class="fas fa-cloud-sun"></i> Weather Forcast</h3>
                        <h4>@Model.City, @Model.Country</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4>Temperature</h4>
                                <p class="display-4">@Model.Temperature °C</p>
                                <p><strong>Feels Like:</strong> @Model.FeelsLike °C</p>
                                <p><strong>Min:</strong> @Model.MinTemperature °C</p>
                                <p><strong>Max:</strong> @Model.MaxTemperature °C</p>
                            </div>
                            <div class="col-md-6">
                                <h4>Conditions</h4>
                                <p><strong>Weather:</strong> @Model.Weather</p>
                                <p><strong>Description:</strong> @Model.WeatherDescription</p>
                                <p><strong>Humidity:</strong> @Model.Humidity %</p>
                                <p><strong>Pressure:</strong> @Model.Pressure hPa</p>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h4>Wind</h4>
                                <p><strong>Speed:</strong> @Model.WindSpeed m/s</p>
                                <p><strong>Direction:</strong> @Model.WindDirection °</p>
                            </div>
                            <div class="col-md-6">
                                <h4>Cloudiness</h4>
                                <p><strong>Cloudiness:</strong> @Model.Cloudiness %</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
