@model NewsTella.Models.Database.Article

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-mt-3">
            <h3>@Html.DisplayFor(model => model.Headline)</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 mt-3">
            <div id="image">
                <content>
                    <div class="row">
                        <div class="col-sm-10">
                        <img src="@Html.DisplayFor(model => model.ImageLink)" class="img-fluid" alt="Details Image" style="max-width: 50%; height: auto;" /> 
                        @* <img src="@Html.DisplayFor(model => model.FormImage)" class="img-fluid" alt="Details Image" style="max-width: 100%; height: auto;" /> *@
                        <div class="justify-content-between"></div>
                        <span class="text-md-start"><b>@string.Join(", ", Model.Categories.Select(c => c.Name))</b></span>
                        @* <span class="text-md-end">@Html.DisplayFor(model => model.DateStamp)</span> *@
                        </div>
                    </div>
                </content>
                <div>
                    @Html.DisplayFor(model => model.ContentSummary)
                </div>
                <div>
                @Html.DisplayFor(model => model.Content)
                </div>
                <div>
                    @Html.DisplayFor(model => model.DateStamp)
                </div>
            </div>
        </div>

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark mb-3">Edit</a>
            <a asp-action="Index" class="btn btn-dark mb-3">Back</a>
        </div>
    </div>
</div>
