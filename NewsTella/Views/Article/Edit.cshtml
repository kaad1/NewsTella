@model NewsTella.Models.Database.Article
@using NewsTella.Data;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Article</h1>

<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <br />
        <dl class="row">
            <dt class="col-md-2">
                Date
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(model => model.DateStamp)
            </dd>
            <dt class="col-md-2">
                Image
            </dt>
            <dd class="col-md-10">
                <img src="@Model.ImageLink" alt="Edit Image" style="max-width: 100%; height: auto;" />
            </dd>
           @*  <dd class="col-md-10">
                <img src="@Model.FormImage" alt="Edit Image" style="max-width: 100%; height: auto;" />
            </dd>*@
        </dl> 
        <dl class="row">
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.ImageLink)
            </dt>
            
            <dd class="col-md-10">
                <div class="form-group">
                    <input asp-for="ImageLink" class="form-control" />
                    <span asp-validation-for="ImageLink" class="text-danger"></span>
                </div>
            </dd>
            @* <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.FormImage)
            </dt>
            <dd class="col-md-10">
                <div class="form-group">
                    <input asp-for="FormImage" class="form-control" />
                    <span asp-validation-for="FormImage" class="text-danger"></span>
                </div>
            </dd> *@
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.LinkText)
            </dt>
            <dd class="col-md-10">
                <div class="form-group">
                    <input asp-for="LinkText" class="form-control" />
                    <span asp-validation-for="LinkText" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.Headline)
            </dt>
            <dd class="col-md-10">
                <div class="form-group">
                    <input asp-for="Headline" class="form-control" />
                    <span asp-validation-for="Headline" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-md-10">
                <div class="form-group">
                    <textarea asp-for="Content" class="form-control" style="min-height: 500px"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </dd>
            <dt class="col-md-2 p-2">
                @Html.DisplayNameFor(model => model.ContentSummary)
            </dt>
            <dd class="col-md-10 p-2">
                <textarea asp-for="ContentSummary" class="form-control" style="min-height: 200px"></textarea>
                <span asp-validation-for="ContentSummary" class="text-danger"></span>
            </dd>
            <dt class="col-md-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-md-10">
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </dd>
        </dl>
        <br />


        <hr />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-dark">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}