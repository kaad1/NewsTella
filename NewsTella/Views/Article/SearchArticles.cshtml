﻿@using NewsTella.Models.Database
@model ICollection<Article>

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <p>No articles found.</p>
}
else
{
    <div class="article-list">
        @foreach (var article in Model)
        {
            <div class="article">
                <h3>@article.Headline</h3>
                <p>@article.ContentSummary</p>
            </div>
        }
    </div>
}