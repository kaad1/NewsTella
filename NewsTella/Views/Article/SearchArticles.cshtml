<style>
    .container-new {
        width: auto !important;
        max-width: 1440px;
        padding-left: 0px;
        padding-right: 0px;
    }

    .searchtext-lsection {
        padding-right: 40px !important;
    }
    
    
    .search-text {
        font-family: var(--tt-secondary) !important;
        font-size: 20px !important;
        line-height: 1.2 !important;
    }
    .articleheading-text {
        font-family: var(--tt-primary-font) !important;
        font-size: 50px !important;
        line-height: 1.2 !important;
        font-weight: 800 !important;
        text-transform: none !important;
        margin-bottom: 0;
    }

    .search-borderbottom {
        content: '' !important;
        width: 100% !important;
        height: 100% !important;
        position: absolute !important;
        top: 0 !important;
        left: 0 !important;
        display: block !important;
        z-index: 0 !important;
        border-color: var(--tt-primary-color) !important;
        border-style: solid !important;
        border-width: 0px 0px 5px 0px !important;
    }

    .articlesearch {
        font-family: var(--tt-extra) !important;
        font-size: 16px !important;
        line-height: 1.2 !important;
        font-weight: 500 !important;
        padding: 15px 20px;
        border: 0;
    }

    .searchbar-wrapper .input-form-border {
        border-color: black;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid #e1e1e1;
        pointer-events: none;
        transition: all .3s ease;
    }

    .searchbar-wrapper .articlesearch:focus+.input-form-border {
        border-color: black !important;
        z-index: 6;
        outline: 0 none;
    }

    .btn-search {
        padding: 0 25px;
        font-family: var(--tt-extra) !important;
        font-size: 14px !important;
        line-height: 1.2 !important;
        font-weight: 500 !important;
        text-transform: uppercase !important;
        letter-spacing: 0.5px !important;
        z-index: 7 !important;
        border-radius: 0;
    }

     .title-line {
        height: 50px;
        display: none;
        position: relative;
    }

    .title-line::after {
            content: '';
            width: 100%;
            position: absolute;
            background-color: #4db2ec;
            top: 0;
            left: 0;
            margin: auto;
            height: 2px;
            bottom: 40%;
    } 

</style>

<div class="container container-new">
    <div class="row row-new">
        <div class="wrapper-search">
            <div class="search-borderbottom">
            </div>
            <div class="col-12 col-md-6 searchtext-lsection">
                <div class="search-result-heading">
                    <div class="search-text">Search results for: </div>
                    <h2 class="articleheading-text">@Model.SearchValue</h2>
                    <div class="title-line"></div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="searchbar-wrapper">
                    <div class="search-form">
                        <form asp-controller="Article" asp-action="SearchArticles" method="get" role="search">
                            <div class="input-group">
                                <input type="text" name="headline" class="input-text form-control articlesearch" aria-label="Search" />
                                <div class="input-form-border"></div>
                                <button class="btn btn-red btn-search" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>