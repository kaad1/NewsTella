@model NewsTella.Models.Database.Article

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3>Delete Article</h3>

            @* <h3>Are you sure you want to delete this article?</h3> *@
            <div>    
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                       Image
                    </dt>
                    <dd class="col-sm-10">           
                        <img src="@Html.DisplayFor(model => model.ImageLink)" class="img-fluid" alt="Article Image" style="max-width: 50%; height: auto;" />
                    </dd>
                   @*  <dd class="col-sm-10">
                        <img src="@Html.DisplayFor(model => model.FormImage)" class="img-fluid" alt="Article Image" style="max-width: 100%; height: auto;" />

                    </dd> *@

                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.DateStamp)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.DateStamp)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.LinkText)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.LinkText)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Headline)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Headline)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.ContentSummary)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.ContentSummary)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Content)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Content)
                    </dd> 
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Categories)
                    </dt>
                    <dd class = "col-sm-10">
                        @string.Join(", ", Model.Categories.Select(c => c.Name))
                    </dd>
                </dl>
                <hr />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    <a asp-action="Index" class="btn btn-dark">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
