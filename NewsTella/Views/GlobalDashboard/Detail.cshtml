<script>
    const xValues = @Html.Raw(Json.Serialize(dateTime));
    const Price = @Html.Raw(Json.Serialize(prices));

    new Chart("myChart", {
        type: "line",
        data: {
            labels: xValues,
            datasets: [{
                data: Price,
                borderColor: "red",
                fill: false,
                label: "Price"
            }]
        },
        options: {
            legend: { display: true },
            title: {
                display: true,
                text: "World Wine Production 2018"
            }
        }
    });
</script>

