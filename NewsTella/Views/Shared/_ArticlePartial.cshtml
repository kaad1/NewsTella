@model NewsTella.Models.Database.Category

<div class="text-center mt-5 mb-5 texth1">
    <h3>@Model.Name</h3>
</div>

<div class="row">
    @foreach (var article in Model.Articles)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top" src="@article.ImageLink" alt="@article.Headline">
                <div class="card-body">
                    <h5 class="card-title">@article.Headline</h5>
                    <p class="card-text">@article.ContentSummary</p>
                    <a href="@Url.Action("Details", "Article", new { id = article.Id })" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
    }
</div>