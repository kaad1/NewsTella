@model IEnumerable<NewsTella.Models.Database.SubscriptionType>

<section id="pricing" class="pricing-content section-padding">
	<h3 class="text-center text-danger">Pricing Plans</h3>
	<p class="text-center">Join now and continue reading the stories important to you..</p>
	<p class="text-center">Chose a plan below to get started</p>
	<div class="row text-center mb-5 d-flex">
		@foreach(var item in Model)
		{	
			<div class="col-lg-4 col-sm-6 col-xs-12 mb-3 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0" style="visibility: visible; animation-duration: 1s; animation-delay: 0.1s; animation-name: fadeInUp;">
				<div class="pricing_design">
					<div class="single-pricing">
						<div class="price-head mb-5">
							<h2>@item.TypeName</h2>
							<h3>@item.Price</h3>
							<span>Monthly</span>
						</div>
						<div class="pricing_design .single-pricing:before text-center">
							<pre>@item.Description</pre>
						</div>
						<div class="pricing-price"></div>
							<a class="btn btn-dark btn-rounded price_btn" asp-controller="Subscription" asp-route-subscriptionTypeId="@item.Id" asp-action="Create">Select</a>
					</div>
				</div>
			</div>
		}
	</div>
</section>
