@model NewsTella.Models.ViewModel.CurrencyExchangeVM

<div class="card mt-4 mb-3">
    <div class="card-header text-white bg-dark">
        <h3><i class="fas fa-money-bill"></i> Currency Exchange</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h3>Exchange Rate</h3>
                <p class="display-4">@Model.BaseCurrency to @Model.TargetCurrency</p>
                <p><strong>Rate:</strong> @Model.ExchangeRate</p>
            </div>
        </div>
    </div>
</div>
